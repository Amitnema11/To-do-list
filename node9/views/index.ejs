<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <div class="container mt-5 d-flex">
            <div class="left w-25">
                <form action="/create" method="post">
                    <input
                        class="form-control mb-3"
                        type="text"
                        placeholder="readme.txt"
                        name="filename"
                    />
                    <button class="w-100 btn btn-dark alert alert-dark p-2">
                        Create File
                    </button>
                </form>
                <hr />

                <% if(files.length === 0) { %>
                <!--  -->
                <p class="mt-5 fs-5 text-center text-danger">folder empty!</p>
                <!--  -->
                <% }%>

                <ol class="list-group">
                    <% files.forEach(function(file){ %>
                    <!--  -->
                    <li
                        class="list-group-item d-flex justify-content-between align-items-center"
                    >
                        <a class="text-decoration-none" href="/<%= file%>"
                            ><%= file%></a
                        >
                        <a
                            class="fs-4 text-danger text-decoration-none"
                            href="/delete/<%= file%>"
                            >x</a
                        >
                    </li>
                    <!--  -->
                    <% }) %>
                </ol>
            </div>

            <div class="right w-75 px-3">
                <% if(file) { %>

                <form action="/update/<%= file%>" method="post">
                    <button class="btn btn-dark mb-3">Save File</button>
                    <textarea
                        rows="15"
                        name="filedata"
                        class="form-control"
                        placeholder="enter text here"
                    >
<%= data%></textarea
                    >
                </form>

                <% } else {%>
                <div class="mt-5 text-center fs-1">No File Opened!</div>
                <%}%>
            </div>
        </div>
    </body>
</html>
